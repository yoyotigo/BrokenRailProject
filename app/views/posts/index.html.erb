<h1>Blog Posts</h1>

<!--Loop through all the posts-->
<% @posts.each do |post| %>  <!--No equal sign after % because only use equal sign if outputting a variable-->
	<div class="well">
	<h3><%= post.title %></h3>
	<p><%= post.body %></h3>
		<%= link_to "Read more", post_path(post), :class => 'btn btn-default' %>
	</div>
<% end %>